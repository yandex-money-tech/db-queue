<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="warn" name="test">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSZZZ}] %-5p [%t] [%c{1}] %m%n%ex"/>
        </Console>

    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>